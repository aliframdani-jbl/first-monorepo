{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@aliframdani-jbl/mager-commit": ["libs/mager-commit/src/index.ts"],
      "@aliframdani-jbl/project-generator": [
        "tools/project-generator/src/index.ts"
      ],
      "@aliframdani-jbl/release-management": [
        "libs/release-management/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
